{
  "name": "carpooling",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "check": "bun -F '*' $(bun elide) check",
    "elide": "if [[ ! $TERM == 'dumb' ]]; then echo '--elide-lines 0'; fi",
    "lint": "bun lint:root && bun -F '*' $(bun elide) lint",
    "lint:fix": "bun lint:root:fix && bun -F '*' $(bun elide) lint:fix",
    "lint:root": "eslint .",
    "lint:root:fix": "eslint --fix ."
  },
  "dependencies": {
    "connect-mongo": "^5.1.0"
  },
  "devDependencies": {
    "eslint-plugin-package-json": "^0.26.4",
    "typescript": "^5.8.2"
  }
}
